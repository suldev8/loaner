<div class="container">
<h1>My items</h1>

<% user_id = current_user ? current_user.id : nil %>
<% if user_id == params[:user_id].to_i  %>
<%= link_to 'New Item', new_user_item_path(current_user) %>
<% end %>
<div class="row mt-5">
<% @items.each do |item| %>
<div class="col-sm-4"> 
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <%= link_to '', user_item_path(id: item) , class: "stretched-link" %>
        </div>
    </div>
</div>
<% end %>
</div>
</div>

