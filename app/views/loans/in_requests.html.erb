<div class="container">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Item</th>
            <th>Owner</th>
            <th>Status</th>
            <th>Accept</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <% item.loans.each do |loan| %>
                <tr>
                    <td><%= loan.item.name %></td>
                    <td><%= loan.item.user.name %></td>
                    <td><%= loan.status %></td>
                    <td>
                       <%= link_to 'Accept', {:controller=>"loans", :action=>"changest", :id => loan.id, :status => "Accepted"} %>
                    </td>
                    <td>
                       <%= link_to 'Reject', {:controller=>"loans", :action=>"changest", :id => loan.id, :status => "Rejected"} %>
                    </td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>
</div>